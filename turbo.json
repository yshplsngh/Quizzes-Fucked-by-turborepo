{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["REFRESH_TOKEN_SECRET"],
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["REFRESH_TOKEN_SECRET"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
